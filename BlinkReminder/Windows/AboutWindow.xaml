<Window x:Class="BlinkReminder.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlinkReminder.Windows"
        mc:Ignorable="d"
        Title="About" x:Name="AboutView" Height="160" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FFF8F8F8">
    <StackPanel Orientation="Vertical">
        <Label x:Name="authorLabel" Margin="0 5 0 0" FontSize="14"/>
        <Label x:Name="versionLabel" FontSize="14"/>
        <Label x:Name="updateLabel" HorizontalAlignment="Center" FontSize="14"/>
        <Button x:Name="okBtn" Content="Close" Width="80" Margin="0 0 0 3" FontSize="14" Click="OkBtn_Click" />
    </StackPanel>
</Window>
